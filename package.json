{
  "name": "ramverk2",
  "jest": {
    "testPathIgnorePatterns": [
      "client/src/"
    ]
  },
  "version": "4.1.1",
  "description": "App with express and react",
  "main": "src/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcusgsta/ramverk2-app.git"
  },
  "scripts": {
    "build": "cd client && run build",
    "start": "node src/server.js",
    "start-client": "cd client && npm start",
    "start-backend": "node src/server.js",
    "start-dev": "concurrently --kill-others 'npm run start-client' 'nodemon'",
    "posttest": "make test",
    "test": "jest --coverage",
    "start-docker": "docker-compose up -d mongodb",
    "stop-docker": "docker-compose down",
    "test-docker": "docker-compose run node_7_test",
    "test-docker2": "docker-compose run node_8_test",
    "test-docker3": "docker-compose run node_9_test",
    "reset-database": "node src/mongodb/setup.js"
  },
  "author": "Marcus Gustafsson",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^22.0.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "clean-css-cli": "^4.1.10",
    "codecov": "^3.0.0",
    "coveralls": "^3.0.0",
    "csslint": "^1.0.5",
    "eslint": "^4.13.1",
    "eslint-config-postcss": "^2.0.2",
    "eslint-plugin-pug": "^1.1.0",
    "eslint-plugin-react": "^7.5.1",
    "html-minifier": "^3.5.7",
    "htmlhint": "^0.9.13",
    "jest": "^21.2.1",
    "js-yaml": "^3.10.0",
    "jscs": "^3.0.7",
    "jsonlint": "^1.6.2",
    "mocha": "^4.0.1",
    "nodemon": "^1.14.3",
    "nyc": "^11.4.1",
    "postcss-reporter": "^5.0.0",
    "postcss-scss": "^1.0.2",
    "stylelint": "^8.4.0",
    "stylelint-config-recommended-scss": "^2.0.0",
    "stylelint-scss": "^2.2.0",
    "superagent": "^3.8.2",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "@marcusgsta/mongodb-api": "^1.0.8",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.1",
    "express": "^4.16.2",
    "jsonwebtoken": "^7.1.9",
    "jstransformer-markdown-it": "^2.0.0",
    "lodash": "^4.16.4",
    "mongodb": "^2.2.33",
    "passport": "^0.3.2",
    "passport-jwt": "^2.1.0",
    "pug": "^2.0.0-rc.4",
    "socket.io": "^2.0.4",
    "stylelint-config-sass-guidelines": "^3.1.0"
  },
  "presets": [
    "env"
  ]
}
